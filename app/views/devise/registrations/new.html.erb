	<div class="col-md-6 display-section">
		<div class="row form-field">
			<div class="col-md-12">
			<h1>A Better Way</h1>
			<p>Some body copy to see what's up in here.</p>
			</div>
		</div>
		<hr>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="row form-field">
		  	<div class="col-md-3 form-label">
				<%= f.label :email %>
			</div>
			<div class="col-md-9">
				<%= f.email_field :email, autofocus: true %>
			</div>
		  </div>

		  <hr>

		  <div class="row form-field">
		  	<div class="col-md-3 form-label">
				<%= f.label :password %>
			</div>

			<div class="col-md-9">
				<%= f.password_field :password, autocomplete: "off" %>
			</div>

			<div class="col-md-9 col-md-offset-3">
				<% if @minimum_password_length %>
				<span class="soft"><%= @minimum_password_length %> characters minimum</span>
				<% end %>
			</div>
		  </div>

		  <hr>

		  <div class="row form-field">
		  	<div class="col-md-3 form-label">
				<%= f.label :password_confirmation %>
			</div>
			<div class="col-md-9">
				<%= f.password_field :password_confirmation, autocomplete: "off" %>
			</div>
		  </div>

		  <hr>

			<div class="row form-field">
				<div class="col-md-12">
			  <div class="actions">
				<%= f.submit "Sign up â†’" %>
			  </div>
			  </div>
			<% end %>

			<div class="row form-field">
				<div class="col-md-12 shared_links text-left">
					<p>Already signed up?</p>
					<%= render "devise/shared/links" %>
				</div>
			</div>
			</div>
	</div>

	<div class="col-md-6 navbar-sidenav">
	<nav class="navbar  text-center">
	<!-- Flash alerts for DEVISE authentication -->
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

<!-- 	<i class="logo-icon fa fa-check-square-o fa-5x"></i> -->
	<h2>Take control of your day.</h2>
	<p>Sign up now and organize your life.</p>

	
	</nav>
	</div>
	